<div class="row d-flex justify-content-center align-items-center h-100 mt-2">
  <div class="col-12 col-md-9 col-lg-7 col-xl-6">
    <div class="card" style="border-radius: 15px;">
      <div class="card-body p-5">
        <h2 class="text-uppercase text-center mb-5">Забыли пароль?</h2>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-outline mb-4">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg" %>
          </div>

          <div class="d-flex justify-content-center">
            <%= f.submit "Отправить инструкции по восстановлению", class: "btn btn-success btn-block btn-lg text-body" %>
          </div>
        <% end %>

        <div class="d-flex text-center justify-content-center mt-4 mb-0">
          <p><%= render "devise/shared/links" %></p>
        </div>
      </div>
    </div>
  </div>
</div>
